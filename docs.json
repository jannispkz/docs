{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Pikzels Docs",
  "colors": {
    "primary": "#2cfbcd",
    "light": "#5ffdd9",
    "dark": "#1C1C1C"
  },
  "openapi": "openapi.yaml",
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "rate-limits"
            ]
          },
          {
            "group": "Images",
            "pages": [
              "api-reference/endpoint/thumbnail",
              "api-reference/endpoint/recreate",
              "api-reference/endpoint/edit",
              "api-reference/endpoint/faceswap"
            ]
          },
          {
            "group": "Text",
            "pages": [
              "api-reference/endpoint/title"
            ]
          },
          {
            "group": "Personas / Styles",
            "pages": [
              "api-reference/endpoint/persona-create",
              "api-reference/endpoint/persona-status",
              "api-reference/endpoint/style-create",
              "api-reference/endpoint/style-status"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://go.pikzels.com/discord",
          "icon": "discord"
        },
        {
          "anchor": "Status",
          "href": "https://status.pikzels.com/",
          "icon": "chart-line"
        },
        {
          "anchor": "Pricing",
          "href": "https://app.pikzels.com/platform/pricing",
          "icon": "credit-card"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:api@pikzels.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.pikzels.com/platform"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Pikzels",
      "linkedin": "https://www.linkedin.com/company/pikzels",
      "instagram": "https://www.instagram.com/pikzels.ai"
    }
  },
  "appearance": {
    "default": "dark",
    "strict": true
  }
}
